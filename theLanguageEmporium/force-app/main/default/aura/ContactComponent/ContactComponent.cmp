<aura:component implements="forceCommunity:availableForAllPageTypes" access="global" >
    <aura:attribute name="Contact" type="String" default="Bob"/>
    
    <!-- A title that mentions the logged in user's name-->
    <div>
        <h5 class="slds-text-heading_large slds-align_absolute-center slds-m-around_medium"> Welcome {!v.Contact}, to the Language Emporium </h5>
    </div>
    
    
    <!-- Seperating an individual div to create the grid utilized by the navigation and contact information-->
    <div class="slds-grid slds-gutters">
        <div class="slds-col slds-size_1-of-12">
            
            <!-- a vertical navigation bar capable of maneuvering through my individual components-->
            <span> <div>
                <lightning:card>
                    <div class="slds-text-body_large slds-align_left slds-m-bottom_x-small">
                        <lightning:verticalNavigation>
                            <lightning:verticalNavigationSection label="Navigation">
                                <lightning:verticalNavigationItem label="Contact Information" name="Info" />
                                <lightning:verticalNavigationItem label="Courses Enrolled" name="Courses" />
                                <lightning:verticalNavigationItem label="Recommended Courses" name="RecCourse" />
                            </lightning:verticalNavigationSection>
                        </lightning:verticalNavigation>
                    </div>
                </lightning:card>
                </div></span>
        </div>
        <div class="slds-col_bump-left slds-size_11-of-12">
            
            <!-- Contact information Component, allows the user to view (and edit?) their contact information -->
            <span> <div class="container slds-m-around_large" id="contactinfo">
                <lightning:card title="Contact Information">
                    <div class="slds-grid">
                        <ul>
                            <li class=" slds-text-heading_large slds-col_bump-left slds-size_4-of-12"> Contact Name </li><br/>
                            <li class=" slds-text-heading_large slds-col_bump-left slds-size_6-of-12"> Contact Phone Number </li><br/>
                            <li class=" slds-text-heading_large slds-col_bump-left slds-size_2-of-12"> Contact Email </li><br/>
                            <li class=" slds-text-heading_large slds-col_bump-left slds-size_5-of-12"> Contact misc. info </li><br/>
                        </ul>
                    </div>
                
                    <!-- creating the buttons that allow the user to edit/save their contact information-->
                    <aura:set attribute="actions">
                        <lightning:button label="Edit"/>
                        <lightning:button label="Save"/>
                    </aura:set> 
                </lightning:card>
                </div></span>
        </div>
    </div>
</aura:component>