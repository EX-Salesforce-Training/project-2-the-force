<aura:component>
    <aura:attribute name="courseName" type="String"/>
    <article class="slds-card">
        <div class="slds-grid slds-gutters">
            <div class="slds-col slds-size_2-of-3">
                <div class="slds-card__header slds-grid">
                    <header class="slds-media slds-media_center slds-has-flexi-truncate">
                        <div class="slds-media__figure">
                            <div class="slds-card__header-title">
                                <span>{!v.courseName}</span>
                            </div>
                        </div>
                    </header>
                </div>
                <div class="slds-card__body slds-card__body_inner">Other things about course</div>
            </div>
            <div class="slds-col_bump-left slds-size_1-of-8 slds-align-bottom">
				<button class="slds-m-left_small slds-m-bottom_xx-small slds-button slds-button_neutral">Add to Cart</button>
            </div>
        </div>
    </article>
</aura:component>	
