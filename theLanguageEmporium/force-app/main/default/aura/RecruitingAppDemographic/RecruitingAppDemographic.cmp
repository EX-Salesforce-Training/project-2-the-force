<aura:component>
    
    <aura:handler name="renderHandler" event="c:RecruitingAppAdditionalQuestionsEvent" action="{!c.cRenderDemographic}"/>
    <aura:handler name="renderHandlerPrevious" event="c:RecruitingAppThanksEventPrevious" action="{!c.cRenderDemographic}"/>
    <aura:registerEvent name="demographicEventPrevious" type="c:RecruitingAppDemographicEventPrevious"/>
    <aura:registerEvent name="demographicEventNext" type="c:RecruitingAppDemographicEvent"/>
    
    <div class="toggle-hide" aura:id="renderDemographic">
        <lightning:card>
            <lightning:recordEditForm objectApiName="Position_Demographic__c">
                <div class="slds-col">
                    <span>
                        <lightning:inputField fieldName="Candidate__c"/>
                        <lightning:inputField fieldName="Gender__c"/>
                        <lightning:inputField fieldName="Ethnicity__c"/>
                        <lightning:inputField fieldName="Veteran_Status__c"/>
                        <lightning:inputField fieldName="Disability__c"/>
                        <lightning:button label="Previous" onClick="{!c.cDemographicPrevious}"/>
                        <lightning:button type="submit" label="Next" onClick="{!c.cDemographicNext}"/>
                    </span>
                </div>  
            </lightning:recordEditForm>
        </lightning:card>    
    </div>
</aura:component>











